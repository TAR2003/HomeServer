# Database Connection (used by backend service)
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/mediaserver

# JWT Secret (change in production for security)
JWT_SECRET=change-this-to-a-random-secure-string-in-production

# Node Environment
NODE_ENV=production

# Media Paths
MEDIA_ROOT=/media
IMAGES_VIDEOS_PATH=/media/images-videos
MOVIES_PATH=/media/movies
SERIES_PATH=/media/series

# Server Ports
FRONTEND_PORT=80
BACKEND_PORT=8080
